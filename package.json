{
  "name": "roku-markdown",
  "version": "0.2.2",
  "description": "Markdown parser/renderer for Roku apps",
  "scripts": {
    "prepare": "ropm copy",
    "build": "bsc --create-package=false",
    "build:debug": "bsc --create-package=false --sourceMap",
    "lint": "bslint"
  },
  "keywords": [
    "ropm"
  ],
  "license": "MIT",
  "devDependencies": {
    "@rokucommunity/bslint": "^0.8.32",
    "brighterscript": "^0.69.10",
    "ropm": "^0.10.34"
  },
  "files": [
    "dist/components/Renderer.*",
    "dist/components/Scroller.*",
    "dist/source/Parser.*"
  ],
  "dependencies": {
    "bslib": "npm:@rokucommunity/bslib@^0.1.1"
  },
  "ropm": {
    "rootDir": "src",
    "packageRootDir": "dist"
  }
}
